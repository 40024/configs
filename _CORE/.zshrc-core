
# Updates aren't real
DISABLE_UPDATE_PROMPT=true

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='nvim'
fi

#  Aliases for Linux 
# Clipboard
alias pbcopy='wl-copy'
alias xsel='wl-copy'
# Misc
alias open='dolphin'
alias q='qalc'
alias mcalc='python "/home/v/Documents/sync-docs/Reference Lists/Food/_Macros/Calculator/macro_calculator.py"'
alias p='/home/v/bin/pacman_names_wrapper.sh'
alias cal='/home/v/bin/cal_wrapper.sh'
alias ts='sudo timeshift'

# CD wrapper
z() {
    # Change directory to the specified path
    cd "$@" || return

    # Try eza with icons first
    if command -v eza &> /dev/null; then
        eza -1 --icons
    # Fallback to ls if eza is not available
    else
        ls -1
    fi
}

#  General Aliases 
# General
alias c='clear'
alias s='sudo'
# History
alias h='history | rg'
alias hist='history'
# Git
alias gc="git add .; git commit -m"
alias gl="git pull"
alias gp="git push"
alias gpl="git log --pretty=format:'%h %ad %s'"
alias gcp="git add .; git commit -m m; git push"
# Misc
alias n='nvim'
alias nl='NVIM_APPNAME=nvim-lazy nvim'
alias sn='sudo nvim'
alias f='fzf --bind "enter:execute(sh -c '\''NVIM_APPNAME=nvim-lazy nvim {} || nvim {}'\'')+abort"'
alias nk='kitty $(pwd) &'
alias avenv="source venv/bin/activate"
alias lg='lazygit'

# Pyenv
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

# Enable vim keybindings
bindkey -v
# (Optional) Make ESC response snappier
export KEYTIMEOUT=1
